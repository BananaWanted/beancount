#!/usr/bin/env python
"""
Simply print a list of all the accounts.
"""

# stdlib imports
from os.path import *

# beancount imports
from beancount import cmdline
from beancount.utils import tree_utils


def main():
    import optparse
    parser = optparse.OptionParser(__doc__.strip())
    cmdline.addopts(parser)
    opts, ledger, args = cmdline.main(parser)

    for acc, branch, line in tree_utils(ledger.get_root_account()):
        print acc.fullname


if __name__ == '__main__':
    main()

